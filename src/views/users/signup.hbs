<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class=" card-header">
                <h2>Acount Register</h2>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" placeholder="You email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="text" name="user" class="form-control" placeholder="You User" value="{{user}}">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="You password">
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirm_password" class="form-control"
                            placeholder="Confirm password">
                    </div>
                    <button class="btn btn-primary btn-block">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>