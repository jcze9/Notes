<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class=" card-header">
                <h2>Acount Signin</h2>
            </div>
            <img src="/img/log.png" class="d-block mx-auto" id="img">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" placeholder="You email">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="You password">
                    </div>
                    <button class="btn btn-primary btn-block">Signin</button>
                </form>
            </div>
        </div>
    </div>
</div>